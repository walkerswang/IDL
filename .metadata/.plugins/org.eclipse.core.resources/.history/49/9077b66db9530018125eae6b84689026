  mlt[i] = mlt_v2(p[1])  
  geopack_conv_coord, b_eci[i,0],  b_eci[i,1], b_eci[i,2],d,e,f, /from_gei,/to_geo
  geopack_bcarsp,a,b,c,d,e,f,br,bt,bp
  b_geo[i,0]=br
  b_geo[i,1]=bt
  b_geo[i,2]=bp
